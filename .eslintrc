{
    "parser": "babel-eslint",
    "extends": [
        "standard",
        "standard-react",
        "plugin:flowtype/recommended",
        "prettier",
        "prettier/flowtype",
        "prettier/react",
        "prettier/standard"
    ],
    "plugins": [
        "react",
        "flowtype",
        "prettier"
    ],
    "env": {
        "jest": true
    },
    "globals": {
        "clearInterval": true,
        "clearTimeout": true,
        "console": true,
        "document": true,
        "expect": true,
        "Promise": true,
        "setInterval": true,
        "setTimeout": true,
        "window": true
    },
    "rules": {
        "prettier/prettier": "error",
        "flowtype/define-flow-type": 2
    }
}